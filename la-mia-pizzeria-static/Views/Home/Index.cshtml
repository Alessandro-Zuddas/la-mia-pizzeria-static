@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*Bootstrap CDN*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title>La mia pizzeria</title>
</head>
    <body>
        
        <div>
            <h1 class="display-4">Welcome</h1>
    
            <table>
              <tr>
                <th>Foto</th>
                <th class="px-2">Nome</th>
                <th class="px-2">Descrizione</th>
                <th class="px-2">Prezzo</th>
              </tr>
              <tr class="py-2">
                <td class="w-50"> <img src="~/img/pizza-margherita.jpg"/> </td>
                <td class="px-2">Pizza Margherita</td>
                <td class="px-2">Classica pizza italiana</td>
                <td class="px-2">4.99 €</td>
              </tr>
              <tr class="py-2">
                <td class="w-50"> <img src="~/img/pizza-americana.jpg"/> </td>
                <td class="px-2">Pizza Americana</td>
                <td class="px-2">Pizza con patatine e wurstel</td>
                <td class="px-2">6.50 €</td>
              </tr>
              <tr class="py-2">
                <td class="w-50"> <img src="~/img/pizza-napoli.jpg"/> </td>
                <td class="px-2">Pizza Napoli</td>
                <td class="px-2">La pizza preferita dai Napoletani</td>
                <td class="px-2">5.99 €</td>
              </tr>
            </table>

        </div>

        @*Bootstrap CDN*@
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    </body>
</html>